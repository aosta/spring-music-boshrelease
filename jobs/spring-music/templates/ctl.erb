#!/bin/bash

RUN_DIR=/var/vcap/sys/run/spring-music
LOG_DIR=/var/vcap/sys/log/spring-music
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    set -ex
    mkdir -p $RUN_DIR $LOG_DIR

    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    cd /var/vcap/jobs/spring-music

    exec /var/vcap/packages/openjdk/bin/java -jar ./packages/spring-music/spring-music.jar \
      --name="<%= p("name") %>" \
      >>  $LOG_DIR/server.stdout.log \
      2>> $LOG_DIR/server.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
